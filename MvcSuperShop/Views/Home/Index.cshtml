@model MvcSuperShop.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h2>Trending categories right now</h2>
    @foreach (var c in Model.TrendingCategories)
    {
        <div class="col-md-4 col-xs-6">
            <div class="shop">
                <div class="shop-img" style="text-align: right;height: 130px">
                    <i class="fa @c.Icon" style="padding: 10px;font-size: 110px;"></i>
                </div>
                <div class="shop-body" style="height: 130px">
                    <h3>@c.Name<br>Collection</h3>
                    <a asp-controller="Category" asp-action="Index" asp-route-id="@c.Id" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    }
</div>


<div class="row">
    <h2>Latest items</h2>
    <div class="gallery">
        @foreach (var c in Model.NewProducts)
        {
            <partial name="_ProductBox" model="@c"/>
        }
    </div>
</div>